<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/withdrawalLayout">


    <EditText
        android:text=""
        android:hint="@string/btcaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edEmergencyAddress"
        android:layout_alignTop="@+id/btnScan"
        android:layout_alignBottom="@+id/btnScan"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btnScan"
        android:layout_toStartOf="@+id/btnScan"
        android:inputType="text"
        android:maxLines="1" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scan_qr"
        android:id="@+id/btnScan"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>